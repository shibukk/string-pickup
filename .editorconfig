# Standardize formatting across editors
# http://editorconfig.org

root=true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true

[*.php]
indent_style=space
indent_size=4

[*.scss]
indent_style=space
indent_size=2

[*.rb]
indent_style=spece
indent_size=4

[*.js]
indent_style=spece
indent_size=2

[*.coffee]
indent_style=spece
indent_size=2

[*.hx]
indent_style=spece
indent_size=4
